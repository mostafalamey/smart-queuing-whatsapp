{
  "name": "kiosk-app",
  "version": "2.0.0",
  "description": "Kiosk application with thermal printer support for WhatsApp-first queue management system.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:icon": "node scripts/build-icon.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:icon && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && npm run electron:compile && electron-builder",
    "electron:pack": "npm run build:icon && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && npm run electron:compile && electron-builder --dir"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@types/usb": "^2.0.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "escpos": "^3.0.0-alpha.6",
    "lucide-react": "^0.263.1",
    "node-thermal-printer": "^4.4.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "usb": "^2.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.32",
    "rcedit": "^5.0.2",
    "typescript": "^5.2.2",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "form-data": "^4.0.1",
    "qs": "^6.14.1",
    "tough-cookie": "^5.0.0"
  },
  "keywords": [
    "kiosk",
    "queue",
    "ticket",
    "printing",
    "whatsapp",
    "thermal-printer"
  ],
  "author": "ACS Smart Queue System",
  "license": "MIT"
}
